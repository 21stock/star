{
    "extends": "airbnb/base",
    "env": {
        "es6"  : true,
        "node" : true
    },
    "globals": {
        "star" : true
    },
    "rules": {
        "indent": 0,
        "one-var": 0,
        "max-len": 0,
        "no-console": 0,
        "brace-style": 0,
        "key-spacing": 0,
        "prefer-const": 0,
        "padded-blocks": 0,
        "comma-spacing": 0,
        "no-multi-spaces": 0,
        "space-infix-ops": 0,
        "space-in-parens": 0,
        "no-param-reassign": 0,
        "consistent-return": 0,
        "space-before-blocks": 0,
        "object-curly-spacing": 0,
        "space-after-keywords": 0,
        "no-multiple-empty-lines": 0,
        "space-before-function-paren": 0
    }
}
